<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".RelativeLayoutActivity">
<!--    buttons-->
    <Button
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED"
        android:backgroundTint="#fc0303"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORANGE"
        android:backgroundTint="#fc5a03"
        android:layout_below="@+id/red"
        android:layout_toRightOf="@+id/red"
        android:layout_marginTop="-13dp"
        />
    <Button
        android:id="@+id/violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIOLET"
        android:backgroundTint="#c9a8e3"
        android:layout_below="@id/indigo"
        android:layout_toLeftOf="@+id/indigo"
        android:layout_marginTop="-13dp"
        />
    <Button
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YELLOW"
        android:backgroundTint="#f8fc03"
        android:layout_below="@+id/orange"
        android:layout_toRightOf="@+id/orange"
        android:layout_marginTop="-13dp"
        />
    <Button
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN"
        android:backgroundTint="#4ded0e"
        android:layout_below="@+id/yellow"
        android:layout_toRightOf="@+id/yellow"
        android:layout_marginTop="-13dp"
        />
    <Button
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUE"
        android:backgroundTint="#1115f2"
        android:layout_below="@id/green"
        android:layout_toLeftOf="@+id/green"
        android:layout_marginTop="-13dp"
        />
    <Button
        android:id="@+id/indigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INDIGO"
        android:backgroundTint="#8a0ceb"
        android:layout_below="@id/blue"
        android:layout_toLeftOf="@+id/blue"
        android:layout_marginTop="-13dp"
        />


</RelativeLayout>